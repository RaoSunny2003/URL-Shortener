<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <h1>URL Shortner</h1>
    <% if (locals.id) { %>
    <p>URL Generated: http://localhost:3001/url/<%= id %></p>
    <% } %>
    <div>
      <form action="/url" method="POST">
        <label for="redirectURL">Enter Your URL</label>
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">Genrate</button>
      </form>
    </div>
    <div>
      <% if (locals.urls) { %>

      <table>
        <thead>
          <th>Sr.No.</th>
          <th>ShortID</th>
          <th></th>
          <th>RedirectURL</th>
          <th></th>
          <th>Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>

          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortID %></td>
            <td></td>
            <td><%= url.redirectURL %></td>
            <td></td>
            <td><%= url.vistHistory.length %></td>
          </tr>

          <% }) %>
        </tbody>
      </table>

      <% } %>
    </div>
  </body>
</html>
